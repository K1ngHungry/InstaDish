{
  "name": "instadish",
  "version": "2.0.0",
  "description": "AI-powered recipe discovery with ingredient-based matching and sustainability insights",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "client": "cd frontend && npm start",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "build": "cd frontend && npm run build",
    "install:all": "npm install && cd frontend && npm install",
    "setup": "npm run install:all && npm run build"
  },
  "keywords": [
    "recipes",
    "cooking",
    "ingredients",
    "food",
    "ai",
    "ollama",
    "sustainability",
    "nutrition"
  ],
  "author": "InstaDish Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  }
}