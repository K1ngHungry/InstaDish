{
  "name": "instadish",
  "version": "2.0.0",
  "description": "AI-powered recipe discovery with ingredient-based matching and sustainability insights",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "client": "cd frontend && npm start",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "build": "cd frontend && npm run build",
    "install:all": "npm install && cd frontend && npm install",
    "setup": "npm run install:all && npm run build",
    "setup:rag": "scripts/setup_rag.sh",
    "setup:rag:conda": "scripts/setup_rag_conda.sh",
    "generate:embeddings": "cd scripts && python3 generate_embeddings.py",
    "generate:embeddings:conda": "cd scripts && conda activate instadish-rag && python generate_embeddings.py"
  },
  "keywords": [
    "recipes",
    "cooking",
    "ingredients",
    "food",
    "ai",
    "ollama",
    "sustainability",
    "nutrition"
  ],
  "author": "InstaDish Team",
  "license": "MIT",
  "dependencies": {
    "@langchain/community": "^0.3.55",
    "@langchain/openai": "^0.6.11",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "faiss-node": "^0.5.1",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
}
