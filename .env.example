# InstaDish Environment Configuration
# Copy this file to .env and update the values for your environment

# ===========================================
# BACKEND CONFIGURATION
# ===========================================

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# API Version
API_VERSION=2.0.0

# ===========================================
# OLLAMA CONFIGURATION
# ===========================================

# Ollama Service URL (local or remote)
OLLAMA_URL=http://localhost:11434

# Ollama Model to use
OLLAMA_MODEL=llama2:7b

# Ollama Timeout (seconds)
OLLAMA_TIMEOUT=30

# ===========================================
# FATSECRET API CONFIGURATION
# ===========================================

# FatSecret API Credentials (for health scores)
FATSECRET_CLIENT_ID=your_client_id_here
FATSECRET_CLIENT_SECRET=your_client_secret_here

# FatSecret API Base URL
FATSECRET_BASE_URL=https://platform.fatsecret.com/rest/server.api

# FatSecret OAuth Token URL
FATSECRET_TOKEN_URL=https://oauth.fatsecret.com/connect/token

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================

# Backend API URL for frontend
REACT_APP_API_URL=http://localhost:8000/api

# Frontend Port
REACT_APP_PORT=3000

# ===========================================
# DEVELOPMENT CONFIGURATION
# ===========================================

# Environment (development, production, staging)
NODE_ENV=development

# Python Environment
PYTHON_ENV=instadish

# Enable/disable features
ENABLE_SUSTAINABILITY_SCORES=true
ENABLE_HEALTH_SCORES=true
ENABLE_CHATBOT=true

# Debug logging
DEBUG=false
VERBOSE_LOGGING=false

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================

# For production deployments, update these values:
# HOST=0.0.0.0
# PORT=10000
# RELOAD=false
# CORS_ORIGINS=https://your-frontend-domain.com
# REACT_APP_API_URL=https://your-backend-domain.com/api
# NODE_ENV=production
# DEBUG=false
